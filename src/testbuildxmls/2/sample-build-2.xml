<?xml version="1.0"?>
<project name="Vizant" basedir="." default="main">

   <property name="sample-vizant.xml" value="import/sample-vizant-import.xml"/>

	<import file="sample-build-config.xml" />
	<import file="sample-build-common.xml" />
	<import file="sample-build-test.xml" />

   <target name="main" depends="jar" description="Builds the jar, and runs vizant on this build file" >
      	<ant antfile="${sample-vizant.xml}"/>
   </target>

   <target name="test-test">
        <ant target="test" antfile="sample-build-test.xml"/>
   </target>

</project>

